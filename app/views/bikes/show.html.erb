<div class="container">
  <div class="row">
    <div class="col-6">
      <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
          <%= link_to bikes_path do %>
            <a><li class="breadcrumb-item text-decoration-none">Bikes</a></li>
          <% end%>
          <li class="breadcrumb-item active" aria-current="page">Details</li>
        </ol>
      </nav>
      <h1><%= @bike.brand %></h1>
    </div>
  </div>

  <div class="card-trip">
    <div class="container">
      <div class="row">
        <div class="col-6 show-bike">
          <% if @bike.photo.attached? %>
            <img class="half-page" src='<%= cl_image_path @bike.photo.key, height: 150, crop: :fill %>'>
          <% else %>
            <img class="half-page" src='https://images.unsplash.com/photo-1485965120184-e220f721d03e?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80'>
          <% end %>
        </div>
        <div class="col-6 show-bike">
          <div class="half-page"
            data-controller="map"
            data-map-markers-value="<%= @markers.to_json %>"
            data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="card-trip-infos col-7">
        <div class="row px-4">
          <div class="card-owner">
            <div class="col-sm-6">
              <p>Owner</p>
              <h6><%= @owner.first_name %> <%= @owner.last_name %></li></h6>
            </div>
          </div>
          <div class="col-sm-6">
            <h6><i class="fa-solid fa-bicycle p-2"></i><%= @bike.bike_type %></h6>
          </div>
          <div class="col-sm-6">
            <h6><i class="fa-solid fa-brush p-2"></i><%= @bike.brand %></h6>
          </div>
          <div class="col-sm-6">
            <h6><i class="fa-solid fa-location-dot p-2"></i><%= @bike.address %></h6>
          </div>
          <div class="col-sm-6">
            <h6><i class="fa-solid fa-circle-info p-2"></i><%= @bike.description %></h6>
          </div>
          <div class="col-sm-6">
            <button id="dayprice" disabled data-bs-toggle="button"><%= @bike.price_per_day %>â‚¬/day</button>
          </div>
          <div>
            <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
          </div>
        </div>
      </div>
      <% if current_user != @bike.user %>
        <div class="col-5 p-5">
          <div class="card-booking ">
              <div class="mx-6 my-6">
              <h5>Booking</h5>

                <%= simple_form_for [@bike, @booking],
                                    html: {
                                      data: {
                                        controller: 'flatpickr',

                                      },
                                    class: "row",
                                    } do |f| %>
                                    <div class="col-sm">
                                      <%= f.input :start_date, as: :string,

                              input_html: {
                                data: {
                                  flatpickr_target: 'startDateInput'

                                },
                              } %>
                              </div>

                    <div class="col-sm">
                    <%= f.input :end_date, as: :string,
                                input_html: {
                                  data: {
                                    flatpickr_target: 'endDateInput'
                                  },
                                } %>
                    </div>
                    <div class="row">
                      <div class="col-sm-8">
                        <h6>Price total: </h6>
                      </div>
                      <div class="col-sm-4">
                        <%= f.submit 'Book now!', class: 'btn btn-primary' %>
                      </div>
                    </div>
                <% end %>
                </div>
              </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
