<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="">
        <h3 class="form-title fw-bold">Propose your bike to location</h3>
        <%= simple_form_for @bike do |f| %>
          <%= f.input :bike_type, collection: Bike::TYPES, label: 'Type', label_html: { class: "label" }, input_html: { class: "input" } %>
          <%= f.input :brand, placeholder: 'Scott', label: 'Brand', label_html: { class: "label" }, input_html: { class: "input" } %>
          <%= f.input :address,
            label: 'Address',
            input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"},
            wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
          %>
          <%= f.input :description, placeholder: 'Great bike ! Even without doping you can still feel like Armstrong', label: 'Description', input_html: { class: "input" } %>
          <%= f.input :price_per_day, placeholder: '10â‚¬', label: 'Price per day', input_html: { class: "input" } %>
          <%= f.input :photo, as: :file, label: 'Photo', input_html: { class: "input" } %>
          <%= f.submit class: 'btn btn-cta' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
