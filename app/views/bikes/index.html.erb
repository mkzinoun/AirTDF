<div class="container mt-3">
  <div class="d-flex mb-3">
    <h1 class="mb-3 p-2">All our Bikes</h1>
    <span class="badge rounded-5 text-bg-primary bg-dark p-2 align-self-start"><%= @bikes.length %></span>
    <%= link_to "Rent my bike", new_bike_path, class: "btn btn-cta ms-auto p-2 align-self-center" %>
  </div>
  <div class="d-flex">
    <div class="cards">
      <% @bikes.each do |bike| %>
        <div class="card">
          <% if bike.photo.attached? %>
            <img class="card-img-top img-size" src="<%= cl_image_path bike.photo.key %>" alt="Card image cap">
          <% else %>
            <img class="card-img-top img-size" src="https://images.unsplash.com/photo-1485965120184-e220f721d03e?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80)" alt="Card image cap">
          <% end %>
          <div class="card-body">
            <div class="d-flex justify-content-between">
              <span class="badge rounded-5 text-bg-dark mb-3"><%= bike.bike_type %></span>
              <p class="card-text"><strong><%= bike.brand %></strong></p>
            </div>
            <p class="card-text"><em><%= bike.description %></em></p>
            <div class="d-flex justify-content-between">
              <div class="d-flex"><i class="fa-solid fa-location-dot"></i><p style="margin-left: 4px"><%= Geocoder.search([bike.latitude, bike.longitude]).first.city %></p></div>
              <div><i class="fa-solid fa-euro-sign"></i><strong><%= (bike.price_per_day).round %>/day</strong></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
